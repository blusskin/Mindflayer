# LNbits configuration
LNBITS_URL=https://legend.lnbits.com
LNBITS_API_KEY=your-invoice-key
LNBITS_ADMIN_KEY=your-admin-key

# Game settings
ANTE_SATS=1000
POT_INITIAL=10000

# Server settings
HOST=0.0.0.0
PORT=8000
DATABASE_PATH=/var/lib/orange-nethack/db.sqlite

# Nethack settings
NETHACK_BINARY=/usr/games/nethack
XLOGFILE_PATH=/var/games/nethack/xlogfile
NETHACK_USER_PREFIX=nh_
NETHACK_GROUP=games

# Session settings
SESSION_TIMEOUT_HOURS=24
MAX_ACTIVE_SESSIONS=100

# Development - set to false for production
MOCK_LIGHTNING=true
