# Strike configuration
STRIKE_API_KEY=your-strike-api-key

# Game settings
ANTE_SATS=1000
POT_INITIAL=10000

# Server settings
HOST=0.0.0.0
PORT=8000
DATABASE_PATH=/var/lib/orange-nethack/db.sqlite
WEBHOOK_SECRET=your-webhook-secret-here
ALLOWED_ORIGINS=http://localhost:5173

# Nethack settings
NETHACK_BINARY=/usr/games/nethack
XLOGFILE_PATH=/var/games/nethack/xlogfile
NETHACK_USER_PREFIX=nh_
NETHACK_GROUP=games

# Session settings
SESSION_TIMEOUT_HOURS=24
MAX_ACTIVE_SESSIONS=100

# Development - set to false for production
MOCK_LIGHTNING=true

# SMTP settings for email notifications (optional)
# Leave SMTP_HOST empty to disable email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_USE_TLS=true
